{
  "$schema": "https://schemas.claude.ai/mcp/v1/config.json",
  "mcpServers": {
    "context7": {
      "url": "https://mcp.context7.com/mcp",
      "description": "Real-time documentation provider for 6000+ libraries and frameworks",
      "headers": {
        "CONTEXT7_API_KEY": "YOUR_API_KEY_HERE"
      },
      "features": [
        "up-to-date-documentation",
        "version-specific-docs",
        "token-optimization",
        "library-detection"
      ],
      "supportedLibraries": [
        "React", "Vue", "Next.js", "Express", "FastAPI", 
        "NestJS", "Tailwind", "PostgreSQL", "MongoDB",
        "OpenAI", "Anthropic", "Hugging Face", "LangChain",
        "Apache Spark", "Airflow", "Pandas", "NumPy"
      ]
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["chrome-devtools-mcp@latest"],
      "description": "Live browser control for testing, debugging, and performance analysis",
      "features": [
        "browser-automation",
        "performance-tracing",
        "network-monitoring",
        "console-debugging",
        "visual-regression"
      ],
      "useCases": {
        "exploratory": "Quick browser checks without test code",
        "debugging": "Live inspection during test failures",
        "performance": "Record traces for bottleneck analysis",
        "prototyping": "Test scenarios before writing Playwright tests"
      }
    },
    "chrome-devtools-headless": {
      "command": "npx",
      "args": ["chrome-devtools-mcp@latest", "--headless=true", "--isolated=true"],
      "description": "Headless Chrome for CI/CD and automated testing",
      "features": [
        "ci-cd-compatible",
        "isolated-sessions",
        "automated-testing",
        "batch-processing"
      ],
      "environment": "ci"
    }
  },
  "configuration": {
    "defaultTokenLimit": 5000,
    "minimumTokens": 1000,
    "autoDetectLibraries": true,
    "cacheDocumentation": true,
    "cacheDuration": "1h"
  },
  "integration": {
    "withAgents": [
      "backend-specialist",
      "frontend-specialist",
      "ml-ai-integration",
      "data-engineer",
      "senior-fullstack-developer",
      "playwright-test-agent",
      "qa-testing-engineer"
    ],
    "triggerPhrase": "use context7",
    "chromeDevToolsTrigger": "use chrome devtools",
    "fallbackBehavior": "use-training-data",
    "chromeDevToolsWorkflows": {
      "debugging": "When Playwright tests fail, use chrome-devtools for live debugging",
      "performance": "Record performance traces before and after optimizations",
      "exploration": "Test new features manually before writing automated tests"
    }
  }
}