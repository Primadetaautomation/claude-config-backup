{
  "name": "claude-context-management-system",
  "version": "1.0.0",
  "description": "Dynamic Context Window Management System for Claude Code Multi-Agent Setup",
  "main": "agent-tools/context-aware-executor.js",
  "scripts": {
    "context:start": "node agent-tools/context-aware-executor.js",
    "context:analyze": "node agent-tools/context-aware-executor.js analyze",
    "context:stats": "node agent-tools/context-aware-executor.js stats",
    "monitor:start": "node agent-tools/context-monitor.js start",
    "monitor:status": "node agent-tools/context-monitor.js status",
    "monitor:dashboard": "node agent-tools/context-monitor.js dashboard",
    "monitor:insights": "node agent-tools/context-monitor.js insights",
    "context:test": "node test-scenarios/context-escalation-tests.js",
    "context:validate": "npm run context:test && npm run monitor:status",
    "playwright:context-test": "node agent-tools/context-aware-executor.js execute playwright-test-agent '{\"type\":\"testing\",\"complexity\":\"complex\",\"scope\":\"full-project\",\"dependencies\":\"many\",\"dataVolume\":\"large\",\"content\":\"Create comprehensive E2E tests for a large web application with multiple browser configurations\"}'",
    "system:init": "npm run context:validate && echo 'âœ… Context Management System initialized'",
    "system:status": "npm run monitor:status && npm run context:stats",
    "logs:usage": "tail -f .claude/context-usage.jsonl",
    "logs:alerts": "tail -f .claude/context-alerts.jsonl",
    "logs:escalations": "tail -f .claude/context-escalations.jsonl",
    "cleanup:logs": "rm -f .claude/context-*.jsonl .claude/monitoring-*.jsonl",
    "install:tools": "chmod +x agent-tools/*.js && echo 'âœ… Context tools permissions set'",
    "preflight:check": "node agent-tools/preflight-check.js",
    "preflight:validate": "node agent-tools/preflight-check.js --comprehensive",
    "impact:analyze": "node agent-tools/impact-analyzer.js",
    "impact:report": "node agent-tools/impact-analyzer.js --format=json",
    "simulate:all": "DRY_RUN=true node agent-tools/simulation-mode.js",
    "simulate:changes": "DRY_RUN=true npm run build 2>/dev/null || true",
    "simulate:deploy": "DRY_RUN=true npm run deploy 2>/dev/null || true",
    "quality:check": "npm run preflight:check && npm run impact:analyze",
    "quality:full": "npm run quality:check && npm run simulate:all",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx 2>/dev/null || echo 'No eslint configured'",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix 2>/dev/null || echo 'No eslint configured'",
    "typecheck": "tsc --noEmit 2>/dev/null || echo 'No TypeScript configured'",
    "test": "jest 2>/dev/null || npm run context:test",
    "test:watch": "jest --watch 2>/dev/null || echo 'No jest configured'",
    "test:coverage": "jest --coverage 2>/dev/null || echo 'No jest configured'",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "rollback:last": "git stash && git reset --hard HEAD~1",
    "rollback:safe": "git stash save 'auto-backup' && echo 'Backup created'",
    "decision:log": "echo 'ðŸ“ Decision logged' && tail -5 decision-log.md",
    "pattern:search": "grep -r '' pattern-library.md",
    "prepare": "husky install 2>/dev/null || echo 'Husky not configured'"
  },
  "bin": {
    "context-executor": "./agent-tools/context-aware-executor.js",
    "context-monitor": "./agent-tools/context-monitor.js"
  },
  "keywords": [
    "claude",
    "context-management",
    "multi-agent",
    "ai",
    "automation",
    "cost-optimization"
  ],
  "author": "Claude Code Context Management System",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "events": "^3.3.0"
  },
  "devDependencies": {
    "jest": "^29.0.0"
  },
  "repository": {
    "type": "git",
    "url": "local-claude-setup"
  },
  "config": {
    "contextConfigPath": "./.claude/agent-context-config.json",
    "defaultContext": "32K",
    "monitoringEnabled": true
  },
  "claudeCode": {
    "contextTiers": {
      "32K": 32000,
      "200K": 200000,
      "1M": 1000000
    },
    "agents": [
      "master-orchestrator",
      "session-memory",
      "context-manager",
      "playwright-test-agent",
      "senior-fullstack-developer",
      "security-specialist",
      "solutions-architect",
      "qa-testing-engineer",
      "devops-deployment-engineer"
    ]
  }
}